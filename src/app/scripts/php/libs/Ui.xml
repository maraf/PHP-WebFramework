    <attribute>
      <attname>th</attname>
      <attreq>implied</attreq>
      <prefix>true</prefix>
      <attcomment>Seznam atributů pro "th".</attcomment>
    </attribute>
    <attribute>
      <attname>td</attname>
      <attreq>implied</attreq>
      <prefix>true</prefix>
      <attcomment>Seznam atributů pro "td".</attcomment>
    </attribute>
    <comment>
      Boolový sloupec pro "ui:grid".
    </comment>
  </tag>
  <tag>
    <tagname>columnDateTime</tagname>
    <function>gridColumnDateTime</function>
