    </attribute>
    <attribute>
      <attname>source</attname>
      <attreq>required</attreq>
      <attcomment>Název entity, ze které se mají čerpat data, nebo pole záznamů.</attcomment>
    </attribute>
    <attribute>
      <attname>display</attname>
      <attreq>required</attreq>
      <attcomment>Název sloupce, který se má zobrazit.</attcomment>
