      <attname>header</attname>
      <attreq>implied</attreq>
      <attcomment>Nadpis sloupce v gridu.</attcomment>
    </attribute>
    <attribute>
      <attname>value</attname>
      <attreq>implied</attreq>
      <attcomment>Hodnota sloupce v gridu (typicky custom property).</attcomment>
    </attribute>
    <attribute>
      <attname>trueText</attname>
      <attreq>implied</attreq>
