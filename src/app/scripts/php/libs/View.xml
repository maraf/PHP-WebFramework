<?xml version="1.0" encoding="utf-8" ?>

<taglib>
  <name>View Lib</name>
  <classname>View</classname>
  <classpath>php.libs</classpath>
  <count>*</count>
  <comment>
    "View"
  </comment>
  <tag>
    <name>process</name>
    <function>processView</function>
    <attribute>
      <attname>path</attname>
      <required />
      <obsolete>Nedělá nic. Nikdy nedělal.</obsolete>
    </attribute>
    <comment>
      Zpracuje pohled.
    </comment>
  </tag>
  <fulltag>
    <name>head</name>
    <function>head</function>
    <comment>
      Přidá svůj obsah do hlavičky stránky.
    </comment>
  </fulltag>
  <fulltag>
    <name>template</name>
    <function>useTemplate</function>
    <attribute>
      <attname>src</attname>
      <required />
    </attribute>
    <comment>
      Šablona.
    </comment>
  </fulltag>
  <tag>
    <name>content</name>
    <function>getContent</function>
    <comment>
      Placeholder pro obsah
    </comment>
  </tag>
  <tag>
    <name>header</name>
    <function>addHeader</function>
    <attribute>
      <attname>name</attname>
      <required />
    </attribute>
    <attribute>
      <attname>value</attname>
      <required />
    </attribute>
    <comment>
      Přidá hlavičku.
    </comment>
  </tag>
  <tag>
    <name>resource</name>
    <function>addResource</function>
    <attribute>
      <attname>type</attname>
      <required />
    </attribute>
    <attribute>
      <attname>src</attname>
      <required />
    </attribute>
    <comment>
      Přidá javascript/styl.
    </comment>
  </tag>
  <tag>
    <name>title</name>
    <function>setTitle</function>
    <attribute>
      <attname>value</attname>
      <required />
    </attribute>
    <comment>
      Nastaví titulek.
    </comment>
  </tag>
  <fulltag>
    <name>panel</name>
    <function>showPanel</function>
    <attribute>
      <attname>id</attname>
    </attribute>
    <attribute>
      <attname>class</attname>
    </attribute>
    <comment>
      Panel
    </comment>
  </fulltag>
  <decorator>
    <function>provideBodyByPath</function>
    <attribute>
      <attname>src</attname>
      <atttype>string</atttype>
      <required />
      <comment>Virtuální cesta k šabloně.</comment>
    </attribute>
    <features>
      <providesFullTagBody />
    </features>
    <comment>Poskytuje obsah těla pro párový tag ze šablony.</comment>
  </decorator>
</taglib>

